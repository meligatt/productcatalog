{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/scripts/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es5",
      "es6"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  }
}